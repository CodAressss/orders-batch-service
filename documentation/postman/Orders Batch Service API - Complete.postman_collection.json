    {
      "name": "2. Batch Load - 3 Datasets",
      "item": [
        {
          "name": "Load Dataset 1 - 150 Válidos (P001-P150)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status code is 200', function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "pm.test('All 150 records success', function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData.totalProcesados).to.equal(150);",
                  "    pm.expect(jsonData.guardados).to.equal(150);",
                  "    pm.expect(jsonData.conError).to.equal(0);",
                  "});"
                ],
                "type": "text/javascript",
                "packages": {},
                "requests": {}
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              },
              {
                "key": "Idempotency-Key",
                "value": "batch-001-valid-150"
              }
            ],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "file",
                  "type": "file",
                  "src": "/F:/Projects_DDD/orders-batch-service/samples/dataset_validos_150.csv"
                }
              ]
            },
            "url": {
              "raw": "{{baseUrl}}/api/v1/pedidos/cargar",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "v1",
                "pedidos",
                "cargar"
              ]
            },
            "description": "Carga 150 pedidos válidos (P001-P150). Happy path - todos guardados sin errores."
          },
          "response": []
        },
