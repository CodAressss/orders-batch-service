              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status code is 409', function () {",
                  "    pm.response.to.have.status(409);",
                  "});",
                  "pm.test('Error indicates already processed', function () {",
                  "    var jsonData = pm.response.json();",
                  "    var msg = jsonData.message || jsonData.error || '';",
                  "    pm.expect(msg.toLowerCase()).to.include('procesado');",
