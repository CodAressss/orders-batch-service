        {
          "name": "Load Dataset 3 - 100 con Errores (E001-E100)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status code is 200 (errors dont stop)', function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "pm.test('Contains business errors', function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData.totalProcesados).to.equal(100);",
                  "    pm.expect(jsonData.conError).to.be.greaterThan(50);",
                  "});"
                ],
                "type": "text/javascript",
                "packages": {},
                "requests": {}
              }
            }
